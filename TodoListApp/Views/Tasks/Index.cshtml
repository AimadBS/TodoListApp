@model IEnumerable<TodoListApp.Models.Task>

@{
    ViewData["Title"] = "Mes tâches";
}

<div class="container mt-4">
    <h1>Mes tâches</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouvelle tâche
        </a>
    </p>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 @(item.IsCompleted ? "bg-light" : "")">
                    <div class="card-body">
                        <h5 class="card-title">
                            @if (item.IsCompleted)
                            {
                                <i class="fas fa-check-circle text-success"></i>
                            }
                            @item.Title
                        </h5>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text">
                            <small class="text-muted">
                                <i class="fas fa-calendar"></i> Échéance : @item.DueDate.ToString("dd/MM/yyyy")
                            </small>
                        </p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                <i class="fas fa-info-circle"></i> Détails
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash"></i> Supprimer
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Ajouter des animations ou des interactions si nécessaire
        });
    </script>
} 